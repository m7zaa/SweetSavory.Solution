@using SweetSavory.Models;
@model List<SweetSavory.Models.Flavor>;
<h1>Flavors</h1>
@if (@Model.Count == 0)
{
  <h3>No flavors found!</h3>
} 
@foreach (Flavor flavor in Model)
{
  <p>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId}, new { @class = "btn btn-default" }) | @Html.ActionLink("Remove", "Delete", new { id = flavor.FlavorId}, new { @class = "btn btn-default" }) | @Html.ActionLink("Edit", "Edit", new {id = @flavor.FlavorId }, new { @class = "btn btn-default" })</p> 
}
<p>@Html.ActionLink("Add new flavor", "Create", new { @class = "btn btn-default" }) | @Html.ActionLink("Add new treat", "Create", "Treats", new { @class = "btn btn-default" })</p>