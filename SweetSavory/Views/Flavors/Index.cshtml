@using SweetSavory.Models;
@model List<SweetSavory.Models.Flavor>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId}) | @Html.ActionLink("remove this flavor", "Delete", new { id = flavor.FlavorId})</li>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>

