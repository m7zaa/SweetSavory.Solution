@using SweetSavory.Models;
@model List<SweetSavory.Models.Flavor>;
<h1>Flavors</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No flavors found!</h3>
} 
@foreach (Flavor flavor in Model)
{
  <p>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId}) | @Html.ActionLink("Remove", "Delete", new { id = flavor.FlavorId}) | @Html.ActionLink("Edit", "Edit", new {id = @flavor.FlavorId })</p> 
}
<hr>
<p>@Html.ActionLink("Add new flavor", "Create") | @Html.ActionLink("Add new treat", "Create", "Treats", new { @class = "btn btn-primary" })</p>