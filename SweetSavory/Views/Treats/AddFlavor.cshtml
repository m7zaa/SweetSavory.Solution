@model SweetSavory.Models.Treat
<h2>Add a flavor</h2>
<h4>Add aflavor for this treat: @Html.DisplayFor(model => model.TreatName)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)
    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId")
    <input type="submit" value="Save" class = "btn btn-primary"/>
}
<p>@Html.ActionLink("Back to Treats", "Index", new { @class = "btn btn-primary" })</p>
