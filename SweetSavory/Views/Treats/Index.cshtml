
@using SweetSavory.Models;
@model List<SweetSavory.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId}) | @Html.ActionLink("Remove", "Delete", new { id = treat.TreatId})| @Html.ActionLink("Edit", "Edit", new {id = @treat.TreatId })</li>
}
<br>
<p>@Html.ActionLink("Add new treat", "Create")</p>

