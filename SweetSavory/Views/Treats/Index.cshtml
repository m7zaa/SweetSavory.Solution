@using SweetSavory.Models;
@model List<SweetSavory.Models.Treat>;
  @{
    ViewData["Title"] = "Treats";
}
<h1>Treats</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No treats found!</h3>
} 
@foreach (Treat treat in Model)
{
  <p>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId}) | @Html.ActionLink("Remove", "Delete", new { id = treat.TreatId})| @Html.ActionLink("Edit", "Edit", new {id = @treat.TreatId })</p>
}
<hr>
<p>@Html.ActionLink("Add new treat", "Create") | @Html.ActionLink("Add new flavor", "Create", "Flavors")</p>

